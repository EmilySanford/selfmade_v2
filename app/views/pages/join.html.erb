<div class="google_survey">
  <%= content_tag(:h1, "PLEASE FILL OUT THE BELOW FORM TO GET IN LINE FOR SELF-MADE. PICTURE TIME OH YEAH", class: "white_color_and_center font_size") %>

  <%= form_for @user, html: {class: "form-horizontal join_form"} do |f| %>
  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-1">
      <%= f.text_field :name, placeholder: 'Name', class: "form-control input-lg survey_input", required: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-1">
      <%= f.text_field :phone_number, placeholder: 'Phone Number', class: "form-control input-lg survey_input", required: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-1">
      <%= f.text_field :instagram_handler, placeholder: 'Instagram Handle', class: "form-control input-lg survey_input", required: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-1">
      <%= f.text_field :snapchat_handler, placeholder: 'Snapchat', class: "form-control input-lg survey_input", required: true %>
    </div>
  </div>

  <div class="col-sm-10 col-sm-offset-5">
    <%= f.submit %>
  </div>

  <% end %>
</div>
